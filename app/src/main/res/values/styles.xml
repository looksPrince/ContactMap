<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorPrimaryInverse">#fff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColorSecondary">#fff</item>
    </style>

    <style name="homeTabStyle" parent="android:Widget">
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/home_tab_design</item>
    </style>

    <style name="home_tab_design" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#bfc1c3</item>
        <item name="textAllCaps">false</item>
    </style>


</resources>
